@model UserProfile

@{
    string strTitle = "Редактировать профайл";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="" asp-controller="Profile" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomUserId" />
            <input type="hidden" asp-for="AvatarImagePath" />

            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName"></label>
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvatarImagePath"></label>
                <input type="file" name="avatarImageFile" id="avatarImageFile" />
                @{
                    if (Model?.AvatarImagePath?.Length > 1)
                    {
                        <div>
                            <img class="img-thumbnail" src="~/images/@Model?.AvatarImagePath" />
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="Skills"></label>
                <input asp-for="Skills" class="form-control" />
                <span asp-validation-for="Skills"></span>
            </div> 
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
    </div>
</div>